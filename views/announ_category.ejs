	<!-- Header -->
	<% include templates/header.ejs %>
	<!--// -->
	<!-- Sidebar -->
	<% include templates/sidebar.ejs %>
	<!--// -->       
		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Category</li>
			</ol>

			<div class="card mb-3">
				<div class="card-header">
					<div class="row">
						<div class="col-md-10">
							<i class="fas fa-table"></i> Category
						</div>
					</div>	
				</div>
				<div class="card-body">
					<div class="row">				
						<div class="col-md-12 column">				
							<div class="box box-primary">
								<div class="box-header">
									<p class="box-title">Add New Category</p> 
								</div>							
								<form action="/addannounccategory" method="post">
									<div class="box-body">
										<div class="row">	
											<div class="form-group col-md-4">
												<label>Name<span class="text-danger">*</span></label>
												<input type="text" name="name" required id="name" required class="form-control">
											</div>
											<div class="form-group col-md-5">
												<div class="input text">
													<label>&nbsp;</label><br>
													<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
												</div>
											</div>
										</div>	
									</div>
								</form>
							</div>
						</div>
					</div><hr>
					<div class="table-responsive">
						<table class="table" width="100%" id="dataTable" cellspacing="0">
							<thead>
								<tr>
									<th>Name</th>
									<th>Created date</th>
									<th>Status</th>
									<th>Action</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Name</th>
									<th>Created date</th>
									<th>Status</th>
									<th>Action</th>
								</tr>
							</tfoot>
							<tbody>
								<%
									if(category_result != '')
									{
										for(var i=0; i < category_result.length; i++)
										{
											%>
												<tr>
													<td>
														<%= category_result[i].name %>
													</td>	
													<td>
														<%= category_result[i].created_at %>
													</td>													
													<td>
														<%
															if(category_result[i].status == true)
															{
																%>
																	Active
																<%
															}
															else
															{
																%>
																	Inactive
																<%
															}
														%>
													</td>
													<td>
														<a href="/editannounccategory/<%= category_result[i]._id %>">
															<i class="fas fa-edit text-info"></i>
														</a>
														&nbsp;														
														<i class="fas fa-trash text-danger" onClick="removeDetails('removeannounccategory','<%= category_result[i]._id %>')" style="cursor:pointer"></i>
													</td>
												</tr>
											<%	
										}
									}
								%>
							</tbody>
						</table>
					</div>					
				</div>
			</div>
			
        </div>
        <!-- /.container-fluid -->
	<!-- Footer -->
	<% include templates/footer.ejs %>
	<!--// -->           