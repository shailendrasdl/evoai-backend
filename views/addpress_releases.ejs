		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/dashboard">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Press releases Add</li>
			</ol>

			<div class="row">				
				<div class="col-md-12 column">				
					<div class="box box-primary">
						<div class="box-header">
							<h3 class="box-title">Add Press releases details</h3> 
						</div>							
						<form action="/addpress_releases" method="post" enctype="multipart/form-data">
							<div class="box-body">
								<div class="row">	
									<div class="form-group col-md-4">
										<label>Image</label><br/>
										<input type="file" required name="image">
									</div>
									<div class="form-group col-md-4">
										<label>Title</label>
										<input type="text" name="title" class="form-control">
									</div>
									<div class="form-group col-md-4">
										<label>Start date/time</label>
										<input type="text" name="start_datetime" class="form-control">
									</div>
								</div>
								<div class="row">	
									<div class="form-group col-md-4">
										<label>Link 1</label>
										<input type="text" name="link_one" class="form-control">
									</div>
									<div class="form-group col-md-4">
										<label>Link 2</label>
										<input type="text" name="link_two" class="form-control">
									</div>
									<div class="form-group col-md-4">
										<label>Link 3</label>
										<input type="text" name="link_three" class="form-control">
									</div>
								</div>
								<div class="row">	
									<div class="form-group col-md-12">
										<label>Text</label><br/>
										<textarea name="text" class="form-control"></textarea>
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-5">
										<div class="input text">
											<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
											<a href="/press_releases" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			
        </div>
