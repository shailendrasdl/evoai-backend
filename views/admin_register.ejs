		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/dashboard">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Admin Role</li>
			</ol>
			<div class="row">				
				<div class="col-md-12 column">				
					<div class="box box-primary">
						<div class="box-header">
							<h3 class="box-title">Create Admin</h3> 
						</div>							
						<form action="/register" method="post">
							<div class="box-body">
								<div class="row">	
									<div class="form-group col-md-6">
										<label>Username</label>
										<input type="text" name="username" required id="username" class="form-control">
									</div>
									<div class="form-group col-md-6">
										<label>Email</label>
										<input type="email" name="email" required id="email" class="form-control">
									</div>
								</div>
								<div class="row">	
									<div class="form-group col-md-6">
										<label>Password</label>
										<input type="password" name="password" required id="password" class="form-control">
									</div>
									<div class="form-group col-md-6">
										<label>Confirm password</label>
										<input type="password" name="conf_password" required id="conf_password" class="form-control">
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-12">
										<label><input type="checkbox" name="role" value="Admin"> Admin</label> &nbsp;&nbsp;&nbsp;&nbsp;
										<label><input type="checkbox" name="role" value="Marketer"> Marketer</label> &nbsp;&nbsp;&nbsp;&nbsp;
										<label><input type="checkbox" name="role" value="Blogger"> Blogger</label> &nbsp;&nbsp;&nbsp;&nbsp;
										<label><input type="checkbox" name="role" value="Support"> Support</label> &nbsp;&nbsp;&nbsp;&nbsp;
										<label><input type="checkbox" name="role" value="Evabot"> Evabot</label>
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-5">
										<div class="input text">
											<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
											<a href="/adminaccess" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			
        </div>
