	<!-- Header -->
	<% include templates/header.ejs %>
	<!--// -->
	<!-- Sidebar -->
	<% include templates/sidebar.ejs %>
	<!--// -->       
		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Recipient Lists</li>
			</ol>

			<div class="card mb-3">
				<div class="card-header">
					<div class="row">
						<div class="col-md-10">
							<i class="fas fa-table"></i> Recipients
						</div>
						<div class="col-md-2">
							<a href="/createemail" class="btn btn-info btn-block" title="Template">Create New</a>
						</div>
					</div>	
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table" id="dataTable" width="100%" cellspacing="0">
							<thead>
								<tr>
									<th>Groups</th>
									<th>Subject</th>
									<th>Message</th>
									<th>Date</th>
									<th>Action</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Groups</th>
									<th>Subject</th>
									<th>Message</th>
									<th>Date</th>
									<th>Action</th>
								</tr>
							</tfoot>
							<tbody>
								<%
									if(recipient_lists != '')
									{
										for(var i=0; i < recipient_lists.length; i++)
										{
											var j=0;
											%>
												<tr>
													<td><%= recipient_lists[i].user_group %></td>
													<td><%= recipient_lists[i].subject %></td>													
													<td>
														<%
															if(recipient_lists[i].image)
															{
																%>
																	<img src="/uploads/<%= recipient_lists[i].image %>" width="100px;" height="100px">
																<%
															}
														%>
														<%- recipient_lists[i].message %>
													</td>
													<td><%= recipient_lists[i].created_at %></td>
													<td>														
														<i class="fas fa-trash text-danger" onClick="removeDetails('removerecipient', '<%= recipient_lists[i]._id %>')" style="cursor:pointer"></i>
													</td>
												</tr>
											<%											
										}
									}								
								%>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			
        </div>
        <!-- /.container-fluid -->
	<!-- Footer -->
	<% include templates/footer.ejs %>
	<!--// -->           