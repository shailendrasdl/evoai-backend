	<!-- Header -->
	<% include templates/header.ejs %>
	<!--// -->
	<!-- Sidebar -->
	<% include templates/sidebar.ejs %>
	<!--// -->       
		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/dashboard">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Evot Value and Bonus</li>
			</ol>

			<div class="row">				
				<div class="col-md-12 column">				
					<div class="box box-primary">
						<div class="box-header">
							<h3 class="box-title">Bonus and Value</h3> 
						</div>							
						<form action="/evotbonus/<%= evotbonus_result._id %>" method="post">
							<div class="box-body">
								<div class="row">	
									<div class="form-group col-md-6">
										<label>Evot value</label>
										<input type="text" name="evot_value" value="<%= evotbonus_result.evot_value %>" required id="evot_value" class="form-control">
									</div>
									<div class="form-group col-md-6">
										<label>Bonus</label>
										<input type="text" name="bonus" value="<%= evotbonus_result.bonus %>" required id="bonus" class="form-control">
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-5">
										<div class="input text">
											<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Update</button>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			
        </div>
        <!-- /.container-fluid -->
	<!-- Footer -->
