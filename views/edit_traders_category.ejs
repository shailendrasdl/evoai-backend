<!-- Header -->
<% include templates/header.ejs %>
<!-- Sidebar -->
<% include templates/sidebar.ejs %>
<!--Edit_traders_category Body -->
<div class="container-fluid">
    <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/dashboard">Dashboard</a>
    </li>
    <li class="breadcrumb-item active"> Category </li>
  </ol>
  <div class="row">
    <div class="col-md-12 column">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Edit Traders Category Details</h3> 
        </div>
          <form action="/editTradersCategory/<%= update_icon._id %>" method="post" enctype="multipart/form-data">
            <div class="box-body">
              <div class="row">
                <%
                  if(update_icon.icon) {
                    %>											
                      <div class="form-group col-md-3">
                        <label>Selected</label><br/>
                        <img src="/uploads/<%= update_icon.icon %>" width="100" height="auto" ></img>
                      </div>
                    <%
                  }
                %>
                <div class="form-group col-md-3">
                  <label>Icon</label><br/>
                  <% if (update_icon) { %>
                    <input type="file" name="icon" id="fileUpload" value="<%= update_icon.icon%>">
                  <% } %>
                </div>
                <div class="form-group col-md-3"">
                  <label>Name</label><br/>
                  <input type="text" name="catname" value="<%= update_icon.name%>">
                </div>
                <div class="form-group col-md-3">
                  <label>Status</label><br/>
                  <select class="form-control" name="status" id="status">
                    <option value="true" <%= (update_icon.status == true)?"selected":"" %>>Active</option>
                    <option value="false" <%= (update_icon.status == false)?"selected":"" %>>Inactive</option>
                  </select>
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-5">
                  <div class="input text">
                    <button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Update</button>
                    <a href="/traders_category" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
                  </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

