	<!-- Header -->
	<% include templates/header.ejs %>
	<!--// -->
	<!-- Sidebar -->
	<% include templates/sidebar.ejs %>
	<!--// -->       
		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/dashboard">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Advertising</li>
			</ol>

			<div class="row">				
				<div class="col-md-12 column">				
					<div class="box box-primary">
						<div class="box-header">
							<h3 class="box-title">Edit Advertising Details</h3> 
						</div>							
						<form action="/editadvertise/<%= edit_advertising._id %>" method="post" enctype="multipart/form-data">
							<div class="box-body">
								<div class="row">	
									<%
										if(edit_advertising.image)
										{
											%>											
												<div class="form-group col-md-3">
													<label>Selected</label><br/>
													<img src="/uploads/<%= edit_advertising.image %>" width="100px" height="100px">
												</div>
											<%
										}
									%>
									<div class="form-group col-md-3">
										<label>Image</label><br/>
										<input type="file" name="image">
									</div>
									<div class="form-group col-md-6">
										<label>URL</label>
										<input type="url" name="url" value="<%= edit_advertising.url %>" class="form-control">
									</div>
								</div>
								<div class="row">	
									<div class="form-group col-md-4">
										<label>Set placement</label>
										<select name="position" class="form-control">
											<option value=""> -- Select position -- </option>
											<option value="top" <%= (edit_advertising.position == 'top')?'selected':''%>>Top of page</option>
											<option value="bottom" <%= (edit_advertising.position == 'bottom')?'selected':''%>>Bottom of page</option>
										</select>
									</div>
									<div class="form-group col-md-4">
										<label>Set duration</label>
										<select name="duration" class="form-control">
											<option value=""> -- Select duration -- </option>
											<option value="1" <%= (edit_advertising.duration == '1')?'selected':''%>>1 Day</option>
											<option value="2" <%= (edit_advertising.duration == '2')?'selected':''%>>2 Days</option>
											<option value="3" <%= (edit_advertising.duration == '3')?'selected':''%>>3 Days</option>
											<option value="4" <%= (edit_advertising.duration == '4')?'selected':''%>>4 Days</option>
											<option value="5" <%= (edit_advertising.duration == '5')?'selected':''%>>5 Days</option>
											<option value="6" <%= (edit_advertising.duration == '6')?'selected':''%>>6 Days</option>
											<option value="7" <%= (edit_advertising.duration == '7')?'selected':''%>>7 Days</option>
											<option value="8" <%= (edit_advertising.duration == '8')?'selected':''%>>8 Days</option>
											<option value="9" <%= (edit_advertising.duration == '9')?'selected':''%>>9 Days</option>
										</select>
									</div>
									<div class="form-group col-md-4">
										<label>Status</label>
										<select name="status" class="form-control">
											<option value="true" <%= (edit_advertising.status == true)?'selected':''%>>Active</option>
											<option value="false" <%= (edit_advertising.status == false)?'selected':''%>>Inactive</option>
										</select>
									</div>
								</div>														
								<div class="row">
									<div class="form-group col-md-5">
										<div class="input text">
											<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Update</button>
											<a href="/advertising" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			
        </div>
        <!-- /.container-fluid -->
	<!-- Footer -->
	<% include templates/footer.ejs %>
	<!--// -->           