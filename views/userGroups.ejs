<!-- Include Header -->
<% include templates/header.ejs %>
<!-- Include Sidebar -->
<% include templates/sidebar.ejs %>
<!--// -->
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">User Groups </li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-md-10">
                    <i class="fas fa-table"></i> User Groups
                </div>
            </div>	
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 column">
                    <div class="box box-primary">
                        <div class="box-header">
                            <p class="box-title">Add New Group</p> 
                        </div>
                        <form action="/addgroup" method="post">
                            <div class="box-body">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label>Group Name<span class="text-danger">*</span></label>
                                        <input type="text" name="groupname" required id="groupname" required class="form-control">
                                    </div>
                                    <div class="form-group col-md-5">
                                        <div class="input text">
                                            <label>&nbsp;</label><br>
                                            <button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div><hr>
            <div class="table-responsive">
                <table class="table" width="100%" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Group Name</th>
                            <th>Created date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Group Name</th>
                            <th>Created date</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <%
                            if(group_result != '')
                            {
                                for(var i=0; i < group_result.length; i++)
                                {
                                    %>
                                        <tr>
                                            <td>
                                                <%= group_result[i].group_name %>
                                            </td>	
                                            <td>
                                                <%= group_result[i].created_at %>
                                            </td>
                                            <td>
                                                <a href="/editgroup/<%= group_result[i]._id %>">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                &nbsp;														
                                                <i class="fas fa-trash text-danger" onClick="removeDetails('removeusergroup','<%= group_result[i]._id %>')" style="cursor:pointer"></i>
                                            </td>												
                                        </tr>
                                    <%	
                                }
                            }
                        %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

<!-- Include Footer -->
<% include templates/footer.ejs %>
