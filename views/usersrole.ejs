	<!-- Header -->
	<% include templates/header.ejs %>
	<!--// -->
	<!-- Sidebar -->
	<% include templates/sidebar.ejs %>
	
	<!--// -->       
		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Role</li>
			</ol>

			<div class="card mb-3">
				<div class="card-header">
					<div class="row">
						<div class="col-md-10">
							<i class="fas fa-table"></i> Users Role
						</div>
					</div>	
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-md-12 column">
							<div class="box box-primary">
								<form action="/adduserrole" method="post">
									<div class="box-body">
										<div class="row">
											<div class="form-group col-md-4">
												<label>Add new<span class="text-danger">*</span></label>
												<input type="text" name="name" required id="name" placeholder="Enter role name" required class="form-control">
											</div>
											<div class="form-group col-md-5">
												<div class="input text">
													<label>&nbsp;</label><br>
													<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
												</div>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div><hr>
					<div class="table-responsive">						
						<table class="table" width="100%" id="dataTable" cellspacing="0">
							<thead>
								<tr>
									<th>Name</th>
									<!--<th>Permission</th>	-->
									<th width="10%">Status</th>
									<th width="15%">Created</th>
									<th width="10%">Action</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Name</th>
									<!--<th>Permission</th>	-->
									<th width="10%">Status</th>
									<th width="15%">Created</th>
									<th width="10%">Action</th>
								</tr>
							</tfoot>
							<tbody id="showuser">
								<%
									if(role_list != '')
									{
										for(var i=0; i < role_list.length; i++)
										{
											%>
												<tr>
													<td><%= role_list[i].name %></td>													
													<!--<td><%= role_list[i].permission %></td>	-->
													<td>
														<%
															if(role_list[i].status == true)
															{
																%>
																	<span class="text-success">Active</span>
																<%
															}
															else
															{
																%>
																	<span class="text-warning">Inactive</span>
																<%
															}
														%>
													</td>	
													<td><%= role_list[i].created_at %></td>	
													<td>
														<a href="/edituserrole/<%= role_list[i]._id %>">
															<i class="fas fa-edit text-info"></i>
														</a>
														&nbsp;														
														<i class="fas fa-trash text-danger" onClick="removeDetails('removeuserrole','<%= role_list[i]._id %>')" style="cursor:pointer"></i>
													</td>
												</tr>
											<%	
										}
									}
								%>
							</tbody>
						</table>
					</div>						
				</div>
			</div>			
        </div>
        <!-- /.container-fluid -->
	<!-- Footer -->	
	<% include templates/footer.ejs %>
	<!--// -->           