	<!-- Header -->
	<% include templates/header.ejs %>
	<!--// -->
	<!-- Sidebar -->
	<% include templates/sidebar.ejs %>
	<!--// -->       
		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/dashboard">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Press releases Edit</li>
			</ol>

			<div class="row">				
				<div class="col-md-12 column">				
					<div class="box box-primary">
						<div class="box-header">
							<h3 class="box-title">Edit Press releases details</h3> 
						</div>							
						<form action="/editpress_releases/<%= editpress_releases_arr._id %>" method="post" enctype="multipart/form-data">
							<div class="box-body">
								<div class="row">	
									<%
										if(editpress_releases_arr.image)
										{
											%>											
												<div class="form-group col-md-2">
													<label>Selected</label><br/>
													<img src="/uploads/<%= editpress_releases_arr.image %>" width="100px" height="100px">
												</div>
											<%
										}
									%>
									<div class="form-group col-md-2">
										<label>Image</label><br/>
										<input type="file" name="image">
									</div>
									<div class="form-group col-md-4">
										<label>Title</label>
										<input type="text" value="<%= editpress_releases_arr.title %>" name="title" class="form-control">
									</div>
									<div class="form-group col-md-4">
										<label>Start date/time</label>
										<input type="text" value="<%= editpress_releases_arr.start_datetime %>" name="start_datetime" class="form-control">
									</div>
								</div>
								<div class="row">	
									<div class="form-group col-md-4">
										<label>Link 1</label>
										<input type="text" name="link_one" value="<%= editpress_releases_arr.link_one %>" class="form-control">
									</div>
									<div class="form-group col-md-4">
										<label>Link 2</label>
										<input type="text" name="link_two" value="<%= editpress_releases_arr.link_two %>" class="form-control">
									</div>
									<div class="form-group col-md-4">
										<label>Link 3</label>
										<input type="text" name="link_three" value="<%= editpress_releases_arr.link_three %>" class="form-control">
									</div>
								</div>
								<div class="row">	
									<div class="form-group col-md-12">
										<label>Text</label><br/>
										<textarea name="text" class="form-control"><%= editpress_releases_arr.text %></textarea>
									</div>
								</div>
								<div class="row">
									<div class="form-group col-md-5">
										<div class="input text">
											<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save</button>
											<a href="/press_releases" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			
        </div>
        <!-- /.container-fluid -->
	<!-- Footer -->
	<% include templates/footer.ejs %>
	<!--// -->           