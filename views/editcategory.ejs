	<!-- Header -->
	<% include templates/header.ejs %>
	<!--// -->
	<!-- Sidebar -->
	<% include templates/sidebar.ejs %>
	<!--// -->       
		<div class="container-fluid">
			<!-- Breadcrumbs-->
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/dashboard">Dashboard</a>
				</li>
				<li class="breadcrumb-item active">Category</li>
			</ol>

			<div class="row">				
				<div class="col-md-12 column">				
					<div class="box box-primary">
						<div class="box-header">
							<h3 class="box-title">Edit Category Details</h3> 
						</div>							
						<form action="/editcategory/<%= edit_category._id %>" method="post">
							<div class="box-body">
								<div class="row">	
									<div class="form-group col-md-6">
										<label>Name<span class="text-danger">*</span></label>
										<input type="text" name="name" required value="<%= edit_category.name %>" class="form-control">
									</div>	
									<div class="form-group col-md-6">
										<label>URL name<span class="text-danger">*</span></label>
										<input type="text" name="url_name" required value="<%= edit_category.url_name %>" id="url_name" class="form-control">
									</div>	
								</div>
								<div class="row">
									<div class="form-group col-md-4">
										<label>Status</label>
										<select name="status" class="form-control">
											<option value="true" <%= (edit_category.status == true) ? "selected" : ""%>>Active</option>
											<option value="false" <%= (edit_category.status == false) ? "selected" : ""%>>Inactive</option>
										</select>
									</div>	
									<div class="form-group col-md-8">
										<label>Description<span class="text-danger">*</span></label>
										<textarea name="description" class="form-control" id="description"><%= edit_category.description %></textarea>
									</div>	
								</div>												
								<div class="row">
									<div class="form-group col-md-5">
										<div class="input text">
											<button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Update</button>
											<a href="/category" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			
        </div>
        <!-- /.container-fluid -->
	<!-- Footer -->
	<% include templates/footer.ejs %>
	<!--// -->           